<% include ../partial/header%>

<div class="row">
    <h1 style="text-align: center;">Create a New Comment to <%=campground.name%></h1>
<div style="width: 30%; margin: 30px auto;">
<form action="/campgrounds/<%= campground._id %>/comments" method="POST" >
    <div class="form-group">
        <input class="form-control" type="text" placeholder="text" name="comment[text]">
    </div>
    <div class="form-group">
    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
    </div>
</form>
<p><a class="btn btn-success" href="/campgrounds/<%= campground._id %>" >Back</a></p>
</div>
</div>
<% include ../partial/footer%>